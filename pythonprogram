def recipeInput():
    try:
        file = open("input.txt",'r')
        exist = True
        file_contents = file.readlines()
        lines=[]
        for file_content in file_contents:
            lines.append(file_content.strip("\n"))
        return lines

    except (EOFError, IOError):
        return "There's a problem with grandma's recipe."
        for x in lines:
            print(x)
    finally:
        if exist=True:
            file.close()

class Dessert(object):

    def __init__(self, eggs = 1 , flour = 1, sugar = 1, apples =1 )
        self.eggs = eggs
        self.flour = flour
        self.sugar =sugar
        self.apples = apples
    def getIngredients (self):
        self.apples = input("How many apples?")
        self.flour = input("How many cups of flour should we add?")
        self.sugar = input("How many cups of sugar should we add?")
